#version 330 core

// Input data
layout(location = 0) in vec3 vertexPosition_modelspace;	// Vertex position in object, from Main
layout(location = 1) in vec3 vertexColor;				// Vertex color, from Main

// Output data
out vec3 fragmentColor;

// Constants for object
uniform mat4 MVP;

void main()
{		
	gl_Position =  MVP * vec4(vertexPosition_modelspace, 1);	// Output position of the vertex, in clip (object) space : MVP * position

	fragmentColor = vertexColor;	// Color of vertices
}

